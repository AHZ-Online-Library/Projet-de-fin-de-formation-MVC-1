<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AHZ Online Library</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body @*style="background-image: url('../../Image/book (1).jpg');"*@>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AHZ Online Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "HomePage", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav" style="float:right !important">
                    @if (Session["full_name"] != null || Session["Member_idss"] != null)
                    {
                        <li><p style="color :#fff ; margin-top:15px; "> hello @(  Session["full_name"])</p></li>
                        <li>@Html.ActionLink("logout", "logout", "Home")</li>




                    }
                    else
                    {

                        <li>@Html.ActionLink("Sign Up", "SignUp", "Home")</li>
                        <li>@Html.ActionLink("Log In", "LogIn", "Home")</li>

                    }

                    @*@if (Session["Admin_Name"] != null || Session["AdminIDs"] != null)
                    {
                        <li><p style="color :#fff ; margin-top:15px; "> hello @(  Session["Admin_Name"])</p></li>
                        <li>@Html.ActionLink("logout", "logout", "Home")</li>

                    }*@


                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer class="footer footer-bottom" style="padding: 10px;background-color:lightslategray;color: white;">
            <center style="color: white;">
                <li style="color: white;">@Html.ActionLink("Log As Admin", "Login_Admin", "Admin")</li>
                <p style="color: white;">&copy; @DateTime.Now.Year - AHZ Online Library</p>
            </center>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

 
